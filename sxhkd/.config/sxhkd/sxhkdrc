# Quit bspwm.
super + F2
    bspc quit

# Restart WM.
super + F1
    ~/Utils/restart_wm.sh

# Close window.
super + w
    bspc window -c

# Toggle fullscreen.
super + f
    bspc window -t fullscreen

# Toggle monocle.
super + m
    bspc desktop --layout next monocle

# Go to previous window.
super + apostrophe
    bspc window -s last

# Go to older window.
super + {o}
    bspc control --record-history off; \
    bspc window older -f; \
    bspc control --record-history on

# Go to newer window.
super + shift + o
    bspc control --record-history off; \
    bspc window newer -f; \
    bspc control --record-history on

# Swap windows.
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

# Go to next desktop.
super + equal
    bspc desktop -f next

# Go to prev desktop.
super + minus
    bspc desktop -f prev

# Preselect window.
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

# Cancel preselection.
super + ctrl + c
    bspc desktop -c

# Resize window.
super + alt + {h,j,k,l}
    bspc window -e {left -100,down +100,up -100,right +100}

# ...more resizing.
super + alt + shift + {h,j,k,l}
    bspc window -e {right -100,up +100,down -100,left +100}

# Move window to other desktop.
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# Switch to last desktop.
super + grave
    bspc desktop -f last

# Go to next window.
super + Tab
    bspc window -f next

# Go to prev window.
super + shift + Tab
    bspc window -f prev

# Focus on urgent monitor.
super + u
    bspc desktop -f next.urgent

# Pointer focus.
~button1
    bspc pointer -g focus

# Pointer move/resize.
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}
super + @button{1-3}
    bspc pointer -

super + shift + Return
    termite

super + p
    dmenu-go

super + control + p
    passmenu.sh

F3
    disable-sreen

F4
    brightness-dec-by-5

F5
    brightness-inc-by-5

F7
    lock.sh

F8
    playerctl previous

F9
    playerctl play-pause

F10
    playerctl next

F11
    volume-dec-by-5

F12
    volume-inc-by-5

XF86AudioMute
    volume-toggle

Print
    take-screenshot

super + Print
    take-screenshot-of-window

super + shift + m
    open-pavucontrol

super + shift + v
    open-vim

super + shift + e
    open-mousepad

super + shift + i
    open-firefox

super + shift + p
    open-firefox-private

# Shortcut for opening it with single hand.
super + shift + z
    open-firefox

super + shift + u
    open-chrome

super + shift + y
    open-chrome-incognito

super + shift + s
    open-spotify

super + shift + b
    open-transmission

super + shift + q
    open-ipython

super + shift + w
    open-ipython2

super + shift + g
    open-glances

super + shift + r
    open-ranger

super + shift + t
    open-thunar

super + shift + x
    open-weechat

# vim: iskeyword+=-
