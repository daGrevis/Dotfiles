[user]
	name = Raitis Stengrevics
	email = dagrevis@gmail.com
[core]
	excludesfile = ~/.gitignore_global
[color]
	ui = true
	diff = always
[rerere]
	enabled = true
[merge]
	tool = vimdiff
[github]
	user = daGrevis
[push]
	default = current
[grep]
	extendRegexp = true
	lineNumber = true
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[delta]
	paging = always
	line-numbers = true
	side-by-side = true
	hunk-header-style = omit
	syntax-theme = ansi
